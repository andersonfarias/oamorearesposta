<%= simple_form_for @comunity do |f| %>
  <%= f.error_notification %>
  <br />

  <div class="row">
    <div class="col-md-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Dados Gerais</h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <br />
          <div class="row">
            <%= f.input :name %>
            <%= f.input :generators_theme %>
            <%= f.input :description, as: :text, input_html: { :style => "resize: vertical;", :rows => 4 } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="ln_solid"></div>
	<div class="form-group">
		<div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 text-center">
			<%= link_to t( "actions.cancel" ), comunities_path(current_user), class: "btn btn-primary" %>
			<%= f.button :submit, class: "btn btn-success" %>
		</div>
	</div>
<% end %>
