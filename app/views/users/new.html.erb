<%= simple_form_for(@user, url: registration_path(@user), html: { class: 'form-horizontal form-label-left' } ) do |f| %>
	<%= f.error_notification %>
	<br />

	<%= f.input :name, required: true, :wrapper => :gentelella %>
	<%= f.input :email, required: true, :wrapper => :gentelella %>
	<%= f.input :password, required: true, :wrapper => :gentelella %>
	<%= f.input :password_confirmation, required: true, :wrapper => :gentelella %>

	<div class="ln_solid"></div>
	<div class="form-group">
		<div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
			<%= f.button :submit, class: "btn btn-primary" %>
		</div>
	</div>
<% end %>
