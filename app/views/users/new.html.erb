<div class="right_col" role="main">
    <div>
        <div class="page-title">
            <div class="title_left">
                <h3>Novo Usuário</h3>
            </div>
            <div class="title_right">
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel" style="height:600px;">
                    <div class="x_title">
                        <h2>Cadastro</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
	                    <%= simple_form_for(@user, url: registration_path(@user)) do |f| %>
							<%= f.error_notification %>
							<div class="form-inputs">
								<%= f.input :name, label: "Nome", required: true, autofocus: true %>
								<%= f.input :email, required: true, autofocus: true %>
								<%= f.input :password, required: true, hint: ("No mínimo #{@minimum_password_length} caracteres" if @minimum_password_length) %>
								<%= f.input :password_confirmation, required: true %>
							</div>
							<div class="form-actions">
								<%= f.button :submit, "Cadastrar", class: "btn-primary" %>
							</div>
						<% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>