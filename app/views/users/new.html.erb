<div class="x_title">
  <h2>Cadastro</h2>
  <div class="clearfix"></div>
</div>
<div class="x_content">
  <%= simple_form_for(@user, url: registration_path(@user)) do |f| %>
    <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :name, label: "Nome", required: true, autofocus: true %>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true, hint: ("No mÃ­nimo #{@minimum_password_length} caracteres" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Cadastrar", class: "btn-primary" %>
      </div>
  <% end %>
</div>
