<%= simple_form_for(@user, url: registration_path(@user), html: { class: 'form-horizontal form-label-left' } ) do |f| %>
	<%= f.error_notification %>
	<br />

	<%= f.simple_fields_for @user.person do |person_form| %>
		<%= person_form.input :first_name, required: true, :wrapper => :gentelella %>
	<% end %>

	<%= f.input :email, required: true, :wrapper => :gentelella %>
	<%= f.input :password, required: true, :wrapper => :gentelella %>
	<%= f.input :password_confirmation, required: true, :wrapper => :gentelella %>
	<%= f.input :partner, :as => :autocomplete, :source_query => autocomplete_partner_name_partners_url, :items => 5, :minLength => 3 , :wrapper => :gentelella %>

	<div class="ln_solid"></div>
	<div class="form-group">
		<div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
			<%= link_to t( "actions.cancel" ), users_path, class: "btn btn-primary" %>
			<%= f.button :submit, class: "btn btn-success" %>
		</div>
	</div>
<% end %>
