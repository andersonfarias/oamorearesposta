<div>
	<div id="wrapper">
		<div id="login" class="animate form">
			<section class="login_content">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					<h1>Login</h1>
					<%= render 'layouts/messages' %>
					<%= devise_error_messages! %>
					<div>
						<%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder =>"Email",  :required => ""  %>
					</div>
					<div>
						<%= f.password_field :password, autofocus: true, :class => "form-control", :placeholder =>"Senha", :required => ""  %>
					</div>
					<% if devise_mapping.rememberable? -%>
						<div class="checkbox-inline">
							<%= f.check_box :remember_me %>
							<%= f.label :remember_me %>
						</div>
					<% end -%>
					<div>
						<%= f.submit "Entrar", :class => "btn btn-default submit"%>
					</div>
					<div class="clearfix"></div>
					<div class="separator">
						<%= render "devise/shared/links" %>	
					</div>
				<% end %>
			</section>
		</div>
	</div>
</div>