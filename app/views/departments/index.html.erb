<%= link_to "#{t('actions.new')} #{Department.model_name.human(count: 1)}",
  new_department_path(current_user), class: "btn btn-primary pull-right" %>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <th class="text-center">Nome</th>
        <th class="text-center">Descrição</th>
        <th class="text-center">Ações</th>
    </thead>
    <tbody>
        <% @departments.each do |d| %>
            <tr>
              <td style="vertical-align: middle"><%= link_to d.name, d %></td>
              <td style="vertical-align: middle"><%= d.description %></td>
              <td class="col-md-4 col-xs-4 text-center">
                  <%= link_to "#{t('actions.show')}", department_path(d), class: "btn btn-primary" %>
                  <%= link_to "#{t('actions.edit')}", edit_department_path(d), class: "btn btn-primary" %>
                  <%= link_to( "#{t('actions.delete')}", department_path( d ), :data => { :confirm => "Você tem certeza?" }, :method => :delete, :class => 'btn btn-danger' )%>
              </td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= will_paginate @departments, :renderer => 'GentelellaPaginationHelper::LinkRenderer' %>
