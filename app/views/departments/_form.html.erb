<%= simple_form_for( @department ) do |f| %>
	<%= f.error_notification %>
	<br/>
	<div class="row">
		<div class="col-md-5 col-md-offset-2 col-xs-12">
			<%= f.input :name, required: true %>
		</div>
		<% if edit %>
			<div class="col-md-3 col-xs-12">
				<%= f.input :is_active, as: :radio_buttons, wrapper: :inline_radio, label_html: {class: "col-md-12 col-xs-12"} %>
			</div>
		<% end %>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2 col-xs-12">
		<%= f.input :description, as: :text, input_html: { :style=> "resize: vertical;", :rows => 6, } %>
		</div>
	</div>

	<div class="ln_solid"></div>
	<div class="form-group">
		<div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 text-center">
			<%= link_to t( "actions.cancel" ), departments_path(current_user), class: "btn btn-primary" %>
			<%= f.button :submit, class: "btn btn-success" %>
		</div>
	</div>
<% end %>
