<%= simple_form_for( @department, html: { class: 'form-horizontal form-label-left' } ) do |f| %>
	<%= f.error_notification %>
	<br/>

	<%= f.input :name, required: true, :wrapper => :gentelella %>
	<%= f.input :description, as: :text, input_html: { :style=> "resize: vertical;", :rows => 6, }, :wrapper => :gentelella  %>

	<div class="ln_solid"></div>
	<div class="form-group">
		<div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
			<%= link_to t( "actions.cancel" ), departments_path(current_user), class: "btn btn-primary" %>
			<%= f.button :submit, class: "btn btn-success" %>
		</div>
	</div>
<% end %>