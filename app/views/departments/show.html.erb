<form class="form-horizontal form-label-left">
	<div class="form-group form-group-lg">
		<label class="control-label col-sm-2"><%= t 'activerecord.attributes.department.name' %>:</label>
		<span style="text-align: left" class="control-label col-sm-10"><%= @department.name %></span>
	</div>
	<div class="form-group form-group-lg">
		<label class="control-label col-sm-2"><%= t 'activerecord.attributes.department.is_active' %>:</label>
		<span style="text-align: left" class="control-label col-sm-10"><%= t("#{@department.is_active}") %></span>
	</div>
	<div class="form-group form-group-lg">
		<label class="control-label col-sm-2"><%= t 'activerecord.attributes.department.description' %>:</label>
		<span style="text-align: left" class="control-label col-sm-10"><%= @department.description %></span>
	</div>
	<div class="ln_solid"></div>
	<div class="form-group">
		<div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
			<%= link_to t( "actions.back" ), departments_path(current_user), class: "btn btn-primary" %>
			<%= link_to t( "actions.edit" ), edit_department_path(@department), class: "btn btn-success" %>
		</div>
	</div>
</form>
