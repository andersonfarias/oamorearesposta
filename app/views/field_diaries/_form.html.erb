<%= simple_form_for(@field_diary) do |f| %>
  <%= f.error_notification %>
	<br/>
	<div class="row">
		<div class="col-md-5 col-md-offset-2 col-xs-12">
			<%= f.input :data, as: :datepicker %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2 col-xs-12">
		<%= f.input :descricao, label: "Descrição", as: :text, input_html: { :style=> "resize: vertical;", :rows => 6, } %>
		</div>
	</div>

	<div class="ln_solid"></div>
	<div class="form-group">
		<div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 text-center">
			<%= link_to t( "actions.cancel" ), field_diaries_path(current_user), class: "btn btn-primary" %>
			<%= f.button :submit, class: "btn btn-success" %>
		</div>
	</div>
  
<% end %>