<%= simple_form_for(@first_contact_file ) do |f| %>
	<%= f.error_notification %>
	<br />

  <%= f.select :hour,
    FirstContactFile.hours.keys.map { |key| [ t("models.first_contact_file.hours.#{key}"), key]} %>


  <%= f.input :institution %>

  <%= f.select :operational_context_first_contact,
    collection: FirstContactFile.operational_context_first_contacts.keys.map { |key| [ t("models.first_contact_file.operational_context_first_contacts.#{key}"), key]} %>

  <%= f.select :how_established_first_contact,
    collection: FirstContactFile.how_established_first_contacts.keys.map { |key| [ t("models.first_contact_file.hours.#{key}"), key]} %>

<!-- contact_source:person -->

  <%= f.select :contact_source_type,
    collection: FirstContactFile.contact_source_types.keys.map { |key| [ t("models.first_contact_file.hours.#{key}"), key]} %>

  <%= f.select :how_person_knew_about_the_organization,
    collection: FirstContactFile.how_person_knew_about_the_organizations.keys.map { |key| [ t("models.first_contact_file.hours.#{key}"), key]} %>

  <%= f.select :beneficiary_and_contact_source_relationship,
    collection: FirstContactFile.beneficiary_and_contact_source_relationships.keys.map { |key| [ t("models.first_contact_file.hours.#{key}"), key]} %>

  <!-- beneficiary:beneficiary  -->

  <%= f.input :is_new_partner, :wrapper => :horizontal_radio_and_checkboxes %>

  <%= f.input :number_of_previous_treatments %>

  <%= f.select :place_of_previous_treatments,
    collection: FirstContactFile.place_of_previous_treatments.keys.map { |key| [ t("models.first_contact_file.hours.#{key}"), key]} %>

  <%= f.select :marital_status,
    collection: FirstContactFile.marital_statuses.keys.map { |key| [ t("models.first_contact_file.hours.#{key}"), key]} %>

  <%= f.input :number_sons %>

  <%= f.input :number_daughters %>

  <%= f.select :ethnic_group,
    collection: FirstContactFile.ethnic_groups.keys.map { |key| [ t("models.first_contact_file.hours.#{key}"), key]} %>

  <%= f.input :religion %>

  <!-- support:person -->

  <%= f.select :family_structure,
    collection: FirstContactFile.family_structures.keys.map { |key, value| [ t("models.first_contact_file.hours.#{key}"), value]} %>

  <%= f.input :scolarity,
    collection: FirstContactFile.scolarities.map { |key, value| [ t("models.first_contact_file.scolarity.#{key}"), value]}, as: :check_boxes, :wrapper => :w_checkboxes %>

  <%= f.input :job,
    collection: FirstContactFile.jobs.map { |key, value| [ t("models.first_contact_file.jobs.#{key}"), value]}, as: :check_boxes, :wrapper => :w_checkboxes %>

  <%= f.input :first_contact_conditions,
    collection: FirstContactFile.first_contact_conditions.map { |key, value| [ t("models.first_contact_file.first_contact_conditions.#{key}"), value]}, as: :check_boxes, :wrapper => :w_checkboxes %>

  <%= f.input :petitions,
    collection: FirstContactFile.petitions.map { |key, value| [ t("models.first_contact_file.petitions.#{key}"), value]}, as: :check_boxes, :wrapper => :w_checkboxes %>

  <%= f.input :answer,
    collection: FirstContactFile.answers.map { |key, value| [ t("models.first_contact_file.answers.#{key}"), value]}, as: :check_boxes, :wrapper => :w_checkboxes %>

  <%= f.input :results,
    collection: FirstContactFile.results.map { |key, value| [ t("models.first_contact_file.results.#{key}"), value]}, as: :check_boxes, :wrapper => :w_checkboxes %>

  <%= f.input :comments %>

<% end %>
