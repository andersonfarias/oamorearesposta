<%= link_to "Nova Ficha", new_first_contact_file_path(current_user), method: :get, class: "btn btn-primary pull-right" %>
<table class="table table-striped table-hover table-bordered">
  <thead>
      <th class="col-md-2 col-xs-2 text-center"><%= t "activerecord.attributes.first_contact_files.date" %></th>
      <th class="col-md-5 col-xs-5 text-center"><%= t "activerecord.attributes.first_contact_files.beneficiary" %></th>
      <th class="col-md-5 col-xs-5 text-center"><%= t "activerecord.attributes.first_contact_files.user" %></th>
  </thead>
  <tbody>
    <% @first_contact_files.each do |file| %>
    <tr>
      <td class="text-center"><%= file.date.to_datetime.strftime(t "date.formats.default") %></td>
      <td><%= file.beneficiary.person.first_name %> <%= file.beneficiary.person.last_name %> </td>
      <td><%= file.user.person.first_name %> <%= file.user.person.last_name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @first_contact_files, :renderer => 'GentelellaPaginationHelper::LinkRenderer' %>
