<div class="row">
  <div class="col-md-4">
    <div class="row">
      <div class="col-md-7">
        <%= f.input :first_name %>
      </div>
      <div class="col-md-5">
        <%= f.input :last_name %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-7">
        <%= f.input :birthdate, as: :datepicker %>
      </div>
      <div class="col-md-5">
        <%= f.input :age %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <%= f.input :gender, include_blank: false,
      collection: Person.genders.keys.map { |key| [ t("enum.person.gender.#{key}"), key]} %>
    <%= f.input :email %>
  </div>
</div>
<div class="row">
  <h4><%= Address.model_name.human(count: 1) %></h4>
  <%= f.simple_fields_for :address do |a| %>
    <%= render "addresses/form", f: a %>
  <% end %>
</div>
