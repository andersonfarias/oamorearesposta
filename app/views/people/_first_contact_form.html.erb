<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :first_name %>
      </div>
      <div class="col-md-6">
        <%= f.input :last_name %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-9">
        <%= f.input :email %>
      </div>
      <div class="col-md-3">
        <%= f.input :age %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :gender, include_blank: false,
          collection: Person.genders.keys.map { |key| [ t("enum.person.gender.#{key}"), key]} %>
      </div>
      <div class="col-md-6">
        <%= f.input :birthdate, as: :datepicker %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= f.simple_fields_for :address do |a| %>
      <%= render "addresses/form", f: a %>
    <% end %>
  </div>
</div>
