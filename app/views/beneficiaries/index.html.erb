
<%= link_to "#{t('actions.new')} #{Beneficiary.model_name.human(count: 1)}",
  new_first_contact_file_path(current_user), method: :get, class: "btn btn-primary pull-right" %>
<table class="table table-striped table-hover table-bordered">
  <thead>
      <th class="col-md-4 col-xs-4 text-center"><%= t "activerecord.attributes.person.first_name" %></th>
      <th class="col-md-4 col-xs-4 text-center"><%= t "activerecord.attributes.beneficiary.department" %></th>
      <th class="col-md-2 col-xs-2 text-center"><%= t "activerecord.attributes.beneficiary.first_contact_file" %></th>
  </thead>
  <tbody>
    <% @beneficiaries.each do |b| %>
    <tr>
      <td style="vertical-align: middle">
        <%= link_to b.person.full_name, b %>
      </td>
      <td style="vertical-align: middle">
        <%= link_to b.department.name, b.department %>
      </td>
      <td style="vertical-align: middle;" class="text-center">
        <%= link_to b.first_contact_file.id, b.first_contact_file %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @beneficiaries, :renderer => 'GentelellaPaginationHelper::LinkRenderer' %>
