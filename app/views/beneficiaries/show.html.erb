<%= link_to t("actions.edit"), edit_beneficiary_path(@beneficiary), class: "btn btn-primary pull-right" %>
<%= link_to t("actions.back"), beneficiaries_path(current_user), class: "btn btn-primary pull-right" %>
<div class="x_content">
  <div class="row">
    <div class="col-md-4 col-xs-12 col-md-offset-2">
      <p>
        <label> <%= Beneficiary.human_attribute_name("department") %>: </label>
        <%= @beneficiary.department.name %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-xs-12 col-md-offset-2">
      <h4><%= Beneficiary.model_name.human(count: 1) %></h4>
      <div class="row">
        <div class="col-md-12" style="padding-left: 25px">
          <p>
            <label> <%= Person.human_attribute_name("first_name") %>: </label>
            <%= @beneficiary.person.full_name %>
          </p>
          <p>
            <label> <%= Person.human_attribute_name("birthdate") %>: </label>
            <%= @beneficiary.person.birthdate %>
          </p>
          <p>
            <label> <%= Person.human_attribute_name("age") %>: </label>
            <%= @beneficiary.person.age %>
          </p>
          <p>
            <label> <%= Person.human_attribute_name("gender") %>: </label>
            <%= t("enum.person.gender.#{@beneficiary.person.gender}") %>
          </p>
          <p>
            <label> <%= Person.human_attribute_name("email") %>: </label>
            <%= @beneficiary.person.email %>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-xs-12">
      <h4><%= Address.model_name.human(count: 1) %></h4>
      <div class="row">
        <div class="col-md-12" style="padding-left: 25px">
          <p>
            <label> <%= Address.human_attribute_name("street") %>: </label>
            <%= @beneficiary.person.address.street %>
          </p>
          <p>
            <label> <%= Address.human_attribute_name("number") %>: </label>
            <%= @beneficiary.person.address.number %>
          </p>
          <p>
            <label> <%= Address.human_attribute_name("neighborhood") %>: </label>
            <%= @beneficiary.person.address.neighborhood %>
          </p>
          <p>
            <label> <%= Address.human_attribute_name("cep") %>: </label>
            <%= @beneficiary.person.address.cep %>
          </p>
          <p>
            <label> <%= Address.human_attribute_name("complement") %>: </label>
            <%= @beneficiary.person.address.complement %>
          </p>
          <p>
            <label> <%= Address.human_attribute_name("city") %>: </label>
            <%= @beneficiary.person.address.city.name_with_state_acronym %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
