<%= simple_form_for( @clinic_treatment ) do |f| %>
	<%= f.error_notification %>
	<br/>
	<div class="col-md-4 col-xs-12">
		<div class="col-md-12 col-xs-12" style="padding-left: 0px;">
			<%= f.label :user %>
		</div>
		<div class="col-md-12 col-xs-12" style="padding-left: 0px;">
			<%= @clinic_treatment.user.person.full_name %>
		</div>
	</div>
	<div class="col-md-5 col-xs-12">
		<div class="col-md-12 col-xs-12" style="padding-left: 0px;">
			<%= f.label :beneficiary %>
		</div>
		<div class="col-md-12 col-xs-12" style="padding-left: 0px;">
			<%= @clinic_treatment.beneficiary.person.full_name %>
		</div>
	</div>
	<div class="col-md-3 col-xs-12">
		<%= f.input :date, as: :datepicker %>
	</div>
	<div class="col-md-4 col-xs-12">
		<%= f.input :axis, include_hidden: false, collection: Diary.axis.options, as: :check_boxes %>
	</div>
	<div class="col-md-8 col-xs-12">
		<%= f.input :description, as: :text, input_html: { :style => "resize: vertical;", :rows => 4 } %>
	</div>

	<%= f.hidden_field :beneficiary_id, value: @clinic_treatment.beneficiary.id %>
	<%= f.hidden_field :current_page, value: @current_page %>

	<div class="form-group">
		<div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 text-center">
			<%= link_to t( "actions.cancel" ), new_clinic_treatment_path( beneficiary_id: @clinic_treatment.beneficiary.id, page: @current_page ), method: :get, title: ClinicTreatment.model_name.human(count: 1), class: "btn btn-primary" %>
			<%= f.button :submit, class: "btn btn-success" %>
		</div>
	</div>
<% end %>	